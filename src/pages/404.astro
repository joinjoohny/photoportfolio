---
import Layout from "../layouts/Layout.astro";
import Topbar from "../components/Topbar.astro";
import Footer from "../components/Footer.astro";
---

<Layout>
  <Topbar />

  <main class="mx-auto w-full max-w-[1170px] px-5 py-14">
    <section class="text-center">
      <h1 class="text-[56px] leading-none font-semibold text-main-green">
        404
      </h1>
      <p class="mt-2 text-[18px] text-[#666] tracking-[0.06em]">
        The page youâ€™re looking for has wandered off.
      </p>

      <div class="mt-8 flex items-center justify-center gap-3">
        <a
          href="/"
          class="inline-block rounded-full border border-[#3e5348] text-[#3e5348] px-5 py-2 text-sm font-medium tracking-wider hover:bg-[#3e5348] hover:text-[#fffeef] focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-[#3e5348] focus-visible:ring-offset-2 transition-colors"
        >
          Back to home
        </a>
      </div>
    </section>

    <!-- Single emoji card -->
    <section class="mt-12">
      <figure class="polaroid mx-auto" aria-label="Emoji card">
        <span class="emoji" aria-hidden="true">ðŸ“¸</span>
      </figure>
    </section>
  </main>

  <Footer />

  <style>
    .emoji {
      display: grid;
      place-items: center;
      width: 100%;
      height: 220px;
      font-size: clamp(52px, 12vw, 92px);
      line-height: 1;
      user-select: none;
      -webkit-user-select: none;
    }
  </style>
</Layout>
