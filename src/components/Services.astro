  const DURATION_MS = 500; // —Å–æ–æ—Ç–≤–µ—Ç—Å—Ç–≤—É–µ—Ç Tailwind duration-500
  const OUT_DELAY_MS = prefersNoMotion ? 0 : Math.round(DURATION_MS * 0.35);
  const TIMEOUT_MS = DURATION_MS + 120;

  function waitTransition(el, prop = "opacity", timeout = TIMEOUT_MS) {
    return new Promise((resolve) => {
      let done = false;
      const onEnd = (e) => {
        if (e && e.target !== el) return;
        if (e && e.propertyName !== prop) return;
        if (done) return;
        done = true;
        el.removeEventListener("transitionend", onEnd);
        resolve();
      };
      el.addEventListener("transitionend", onEnd, { once: true });
      setTimeout(() => {
        if (done) return;
        el.removeEventListener("transitionend", onEnd);
        resolve();
      }, timeout);
    });
  }

  function setOpacityLow(...els) {
    els.forEach((el) => {
      if (el) el.style.opacity = "0.1";
    });
  }
  function setOpacityHigh(...els) {
    els.forEach((el) => {
      if (el) el.style.opacity = "1";
    });
  }

  async function fadeTextSwap(container, content) {
    if (!container) return;

    if (prefersNoMotion) {
      container.innerHTML = content;
      return;
    }

    // Fade OUT
    setOpacityLow(container);
    await Promise.race([
      new Promise((r) => setTimeout(r, OUT_DELAY_MS)),
      waitTransition(container),
    ]);

    // Swap
    container.innerHTML = content;
    // Force reflow
    // eslint-disable-next-line no-unused-expressions
    container.offsetHeight;

    // Fade IN
    setOpacityHigh(container);
  }

  function setActiveButton(root, btn) {
    root
      .querySelectorAll('[data-svc][aria-pressed="true"]')
      .forEach((b) => b.setAttribute("aria-pressed", "false"));
    btn?.setAttribute("aria-pressed", "true");
