  function initServices() {
    const root = document.getElementById("services");
    if (!root) return;

    const textBox = root.querySelector("#services-text");
    if (textBox) textBox.style.opacity = "1";

    const onClick = (e) => {
      const btn =
        e.target instanceof Element ? e.target.closest("[data-svc]") : null;
      if (!btn) return;
      const key = btn.getAttribute("data-svc");
      const data = key ? texts[key] : null;
      if (!data) return;
      const html = `
        <h3 class="text-xl sm:text-2xl font-semibold mb-3">${data.title}</h3>
        <p class="text-[#555] leading-relaxed">${data.body}</p>
      `;
      fadeTextSwap(textBox, html);
      setActiveButton(root, btn);
