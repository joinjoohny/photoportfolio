---
import { useTranslations } from "../i18n/ui";
const t = useTranslations(Astro);
---
<section id="contacts" class="py-16 sm:py-20">
  <div class="mx-auto w-full max-w-[1170px] px-5">
    <h2 class="text-3xl sm:text-4xl m-0 mb-6 text-main-rose">{t('contacts.title')}</h2>
    <div class="grid gap-7 lg:grid-cols-2">
      <div>
        <div class="text-[12px] uppercase tracking-[0.16em] text-[#6f6f6f]">
          {t('contacts.location')}
        </div>
        <div class="text-[#222]">Germany, Dresden</div>
        <div
          class="text-[12px] uppercase tracking-[0.16em] text-[#6f6f6f] mt-2.5"
        >
          {t('contacts.email')}
        </div>
        <div>
          <a
            href="mailto:vladavada@gmail.com"
            class="text-[#222] underline decoration-[#3e5348] decoration-2 underline-offset-2"
            >vladavada@gmail.com</a
          >
        </div>
      </div>

      <div>
        <div class="text-[12px] uppercase tracking-[0.16em] text-[#6f6f6f]">
          {t('contacts.telegram')}
        </div>
        <div>
          <a
            href="https://t.me/vladisssllava"
            class="text-[#222] underline decoration-[#3e5348] decoration-2 underline-offset-2"
            target="_blank"
            rel="noopener">@vladisssllava</a
          >
        </div>
        <div
          class="text-[12px] uppercase tracking-[0.16em] text-[#6f6f6f] mt-2.5"
        >
          {t('contacts.instagram')}
        </div>
        <div>
          <a
            href="https://instagram.com/vladavada"
            class="text-[#222] underline decoration-[#3e5348] decoration-2 underline-offset-2"
            >@vladavada</a
          >
        </div>
      </div>
    </div>
  </div>
</section>
